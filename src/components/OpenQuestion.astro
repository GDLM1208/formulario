---
interface Props {
	pregunta: string;
    esSubPregunta?: boolean;
}

const { pregunta, esSubPregunta } = Astro.props;
const questionClasses = esSubPregunta ? 'sub-question' : 'question';
---

<article class={questionClasses}>
    <span>{pregunta}</span>
    <input type="text" />
</article>

<style>
	.question {
		margin-bottom: 20px;
	}
    
	.question span {
        display: block;
		margin-bottom: 20px;
		font-size: 1.1em;
	}
    
    .question input {
        width: 90%;
        padding: 10px;
        font-size: 1em;
        border: 2px solid #ccc;
        border-radius: 5px;
    }
    
    .sub-question {
        margin: -20px 0 20px 20px;
    }

    .sub-question span {
        display: inline-block;
        font-size: 0.9em;
        margin-bottom: 10px;
    }

    .sub-question input {
        width: 300px;
        padding: 5px;
        font-size: 1em;
        border: 2px solid #ccc;
        border-radius: 5px;
    }
</style>
